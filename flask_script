from flask import Flask, render_template, request, redirect, url_for
import mysql.connector
import os
from dotenv import load_dotenv
import bcrypt

load_dotenv()


try:

    connection = mysql.connector.connect(host = os.getenv("MYSQL_HOST"), user = os.getenv("MYSQL_USER"), password = os.getenv("MYSQL_PASSWORD"), database = os.getenv("MYSQL_DB"))

    if connection.is_connected():
        cursor = connection.cursor()
        print('success')

except mysql.connector.Error as err:
        if err.errno == mysql.connector.errorcode.ER_ACCESS_DENIED_ERROR:
            print("wrong credentials")
        elif err.errno == mysql.connector.errorcode.ER_BAD_DB_ERROR:
            print("database doesn't exist")
        else:
            print(err)




login_name = ''
user_position = ''


app = Flask(__name__)

@app.route('/', methods=['GET', 'POST'])
def login_page():

    if request.method == 'POST':

        uname = request.form['username']
        pword = request.form['password']

        cursor.execute("SELECT COUNT(*) FROM staff WHERE user_name = %s AND pass_word = %s;", (uname, pword))
        result = (cursor.fetchall())[0][0]

        if result == 1:

            cursor.execute("SELECT position FROM staff WHERE user_name = %s AND pass_word = %s;", (uname, pword))

            global user_position
            user_position = (cursor.fetchall())[0][0]

            global login_name
            login_name = uname

            return redirect(url_for("main_page"))
        
        elif result == 0:

            return "incorrect username or password"

    else:

        return render_template('test_template.html')





@app.route('/main', methods=['GET', 'POST'])
def main_page():

    if (request.method == 'POST'):
        return redirect(url_for("change_password"))
    else:
        return render_template('main_page.html', name = login_name, position = user_position)



@app.route('/changepassword', methods=['GET', 'POST'])
def change_password():

    if (request.method == 'POST'):
        uname = request.form['username']
        new_pass = request.form['new_password']

        cursor.execute('UPDATE staff SET pass_word = %s WHERE user_name = %s', (new_pass, uname))
        connection.commit()

        return redirect(url_for("main_page"))
    
    else:
        return render_template('change_password.html')



if __name__ == '__main__':
    app.run(debug = True)